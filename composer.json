{
    "name": "hyperf/hyperf-skeleton",
    "type": "project",
    "keywords": [
        "php",
        "swoole",
        "framework",
        "hyperf",
        "microservice",
        "middleware"
    ],
    "description": "A coroutine framework that focuses on hyperspeed and flexible, specifically use for build microservices and middlewares.",
    "license": "Apache-2.0",
    "require": {
        "php": ">=8.0",
        "ext-swoole": ">=4.5",
        "hyperf/cache": "3.0.*",
        "hyperf/command": "3.0.*",
        "hyperf/view": "3.0.*",
        "hyperf/config": "3.0.*",
        "hyperf/db-connection": "3.0.*",
        "hyperf/framework": "3.0.*",
        "hyperf/guzzle": "3.0.*",
        "hyperf/http-server": "3.0.*",
        "hyperf/logger": "3.0.*",
        "hyperf/memory": "3.0.*",
        "hyperf/async-queue": "3.0.*",
        "hyperf/task": "3.0.*",
        "hyperf/crontab": "3.0.*",
        "hyperf/process": "3.0.*",
        "hyperf/redis": "3.0.*",
        "hyperf/database": "3.0.*",
        "hyperf/websocket-server": "3.0.*",
        "hyperf/constants": "3.0.*",
        "phper666/jwt-auth": "~4.0.10",
        "easyswoole/verifycode": "3.x",
        "hyperf/filesystem": "3.0.*",
        "xxtime/flysystem-aliyun-oss": "^1.5",
        "dragonmantank/cron-expression": "^3.1",
        "doctrine/dbal": "^3.0",
        "hyperf/code-generator": "^0.3.3",
        "mogody/hyperf-permission": "^3.0",
        "hyperf/validation": "^3.0",
        "hyperf/flysystem-oss": "*",
        "chinayin/ip2region": "^2.0",
        "qcloud_sts/qcloud-sts-sdk": "3.0.8",
        "tencentcloud/tencentcloud-sdk-php": "^3.0"
    },
    "require-dev": {
        "swoole/ide-helper": "^4.5",
        "friendsofphp/php-cs-fixer": "^2.14",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^0.12",
        "hyperf/devtool": "3.0.*",
        "hyperf/testing": "3.0.*"
    },
    "suggest": {
        "ext-openssl": "Required to use HTTPS.",
        "ext-json": "Required to use JSON.",
        "ext-pdo": "Required to use MySQL Client.",
        "ext-pdo_mysql": "Required to use MySQL Client.",
        "ext-redis": "Required to use Redis Client."
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/Foundation/Helpers/app.php",
            "app/Foundation/Helpers/array.php",
            "app/Foundation/Helpers/curl.php",
            "app/Foundation/Helpers/functions.php",
            "app/Foundation/Helpers/math.php",
            "app/Foundation/Helpers/time.php",
            "app/Foundation/Helpers/system.php",
            "app/Foundation/Helpers/file.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "./test/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": [],
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-autoload-dump": [
            "rm -rf runtime/container"
        ],
        "test": "co-phpunit -c phpunit.xml --colors=always",
        "cs-fix": "php-cs-fixer fix $1",
        "analyse": "phpstan analyse --memory-limit 300M -l 0 -c phpstan.neon ./app ./config",
        "start": "php ./bin/hyperf.php start"
    }
}
